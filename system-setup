#!/bin/bash
<<DETAILS
Set up a new system with my preferred packages.
Usage: ./system-setup
DETAILS

echo -e "Starting system setup...\n"
sudo add-apt-repository ppa:jonathonf/vim
sudo apt update
sudo apt-get update

# Update vim version
sudo apt install vim

# Intall bash-wakatime (only after conda has been set up and base is active)
pip install wakatime
git clone https://github.com/gjsheep/bash-wakatime.git ~/.local/share/bash-wakatime

# trash-cli (safer alternative to rm -rf)
sudo apt install trash-cli

# Silver Searcher
sudo apt-get install silversearcher-ag

# fzf (fuzzy file search)
git clone --depth 1 https://github.com/junegunn/fzf.git ~/.fzf
~/.fzf/install

# tdlr; (man, but with examples)
sudo apt install tldr && tldr

# zip (in case tar.gz won't do)
sudo apt install zip

# bat (a cat clone, with syntax highlighting)
wget https://github.com/sharkdp/bat/releases/download/v0.15.4/bat_0.15.4_amd64.deb
sudo dpkg -i bat_0.15.4_amd64.deb
rm -rf bat_0.15.4_amd64.deb

# Vim plugins install dependencies
# 1. YouCompleteMe
if [ -f ~/.vim/bundle/YouCompleteMe/install.py ]; then
    sudo apt install build-essential cmake
    python3 ~/.vim/bundle/YouCompleteMe/install.py --all
fi
# 2. vim-autoformat (default formatprograms) 
sudo apt-get install python-autopep8 # Python
sudo npm install -g remark-cli # Markdown
sudo npm install -g fixjson # JSON
sudo npm install -g js-beautify # HTML, CSS, JS 


# Heroku CLI and PostgreSQL
curl https://cli-assets.heroku.com/install.sh | sh
sudo apt-get install postgresql

# Java (default v11)
sudo apt install default-jdk

echo -e "\nSystem setup complete!\n"
